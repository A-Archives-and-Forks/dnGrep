<UserControl x:Class="dnGREP.WPF.SyntaxHighlighter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Border Background="White" BorderThickness="1" BorderBrush="{Binding BorderBrush, ElementName=tbFilePattern}" >
            <ae:TextEditor Name="textEditor" Document="{Binding Path=Document}" FontFamily="Consolas" ShowLineNumbers="True" IsReadOnly="True" FontSize="12"/>
        </Border>
    </DockPanel>
</UserControl>
